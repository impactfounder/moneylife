            const principal = parseNumber(document.getElementById('principal').value);
            const monthlyDeposit = parseNumber(document.getElementById('monthlyDeposit').value);
            const annualRate = parseFloat(document.getElementById('annualRate').value);
            const investPeriod = parseInt(document.getElementById('investPeriod').value);
