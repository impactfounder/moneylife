            // ê³¼ì„¸í‘œì¤€
            const taxBase = Math.max(0, (taxableAmount - yearDeduction) / taxableYears);

            // í™˜ì‚°ê¸‰ì—¬
            let incomeTax = 0;
            if (taxBase <= 8000000) {
