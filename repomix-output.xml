        function convertBeforeToAfter(beforeTaxSalary) {
            // 4ëŒ€ë³´í—˜ ìš”ìœ¨ (2025ë…„ ê¸°ì¤€)
            const nationalPension = Math.min(beforeTaxSalary * 0.045, 265500);
            const healthInsurance = beforeTaxSalary * 0.03545;
            const longTermCare = healthInsurance * 0.1295;
            const employmentInsurance = beforeTaxSalary * 0.009;
            
            const totalInsurance = nationalPension + healthInsurance + longTermCare + employmentInsurance;
            
            // ê³¼ì„¸í‘œì¤€
            const taxableIncome = Math.max(0, beforeTaxSalary - 100000);
            
            // ê°„ì´ì„¸ì•¡ ê³„ì‚°
            let incomeTax = 0;
            if (taxableIncome <= 1060000) {
                incomeTax = 0;
            } else if (taxableIncome <= 5000000) {
